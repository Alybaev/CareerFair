<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kg.neobis.careerfair">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".utils.custom_classes.ApplicationClass"
        android:allowBackup="true"
        android:icon="@drawable/logo2"
        android:label="@string/app_name"

        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            />
        <activity
            android:name=".ui.main_menu.MainMenuActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name=".ui.shedule.ScheduleActivity"
            android:label="Расписание" />
        <activity
            android:name=".ui.constest.ContestActivity"
            android:label="Конкурсы" />
        <activity android:name=".ui.organizers.OrganizersActivity" />
        <activity
            android:name=".ui.map.MapActivity"
            android:label="Карта" />
        <activity
            android:name=".ui.employers.EmployersActivity"
            android:label="Работадатели" />
        <activity android:name=".ui.employers.DetailInfoAboutEmployerActivity" />
        <activity android:name=".ui.about_career_fair.AboutCareerFairActivity" />
        <activity android:name=".ui.interview.InterviewActivity"
            android:label="Опросы"/>
        <activity android:name=".ui.constest.ContestActivityGoogleForm" />
    </application>

</manifest>