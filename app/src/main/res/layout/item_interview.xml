<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp">

    <View
        android:layout_width="12dp"
        android:layout_height="31dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:background="#FEE04A" />

    <kg.neobis.careerfair.ui.custom.TextViewRobotoRegular
        style="@style/CustomTitleStyle"
        android:id="@+id/tvTopic"
        android:layout_weight="1"
        tools:text="Тендеций карьеры" />

    <Button
        android:id="@+id/btnRedirect"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center_vertical"
        android:background="@color/colorPrimary"
        android:text="@string/go_to_interview_button_text"
        android:textSize="14dp" />

</LinearLayout>