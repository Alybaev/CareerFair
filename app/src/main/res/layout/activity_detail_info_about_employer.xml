<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical"
        tools:context=".ui.employers.DetailActivity">

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="5dp"
                android:src="@drawable/default_image_for_employers128px"/>

            <kg.neobis.careerfair.ui.custom.TextViewRobotoLight
                android:id="@+id/tvName"
                style="@style/CustomTitleStyle"
                android:layout_height="match_parent"
                tools:text="Amazon" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FEE04A" />

        <kg.neobis.careerfair.ui.custom.TextViewRobotoMedium
            android:id="@+id/tvDescription"
            style="@style/CustomTitleStyle"
            android:layout_marginTop="15dp"
            android:text="@string/amazon_default_text"
            android:textSize="14sp" />
    </LinearLayout>
</ScrollView>