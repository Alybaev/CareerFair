<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/employer_info"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="8dp">
    <ImageView
        android:id="@+id/photo_of_employer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/default_image_for_employers128px"
       android:background="@drawable/shadow_circle"


        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginStart="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_of_employer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            tools:text="Amazon"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:src="@drawable/horizontal_long_line"
            />

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="3sp"
            android:id="@+id/company_of_employer"
            tools:text="Amazon.com, Inc."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

</LinearLayout>