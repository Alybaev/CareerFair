<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:buttonStyle">@style/RobotoButtonStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#1F3058</item>
    </style>

    <style name="careerFairStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">64sp</item>
        <item name="android:textColor">#FEE04A</item>

    </style>

    <style name="FillRegistrationStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="SheduleSubtitlesStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SheduleItemStyle" parent="@style/SheduleSubtitlesStyle">
        <item name="android:layout_marginTop">@dimen/margin_top_for_item_in_schedule</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ContestTitleStyle">
        <item name="android:textSize">18sp</item>

        <item name="android:textColor">#2A2A2A</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="ButtonYellowStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">187dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#1F3058</item>
        <item name="android:background">@color/colorAccent</item>
    </style>


    <style name="DescriptionOfContest">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/simple_text_size</item>
        <item name="android:layout_marginTop">53dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
